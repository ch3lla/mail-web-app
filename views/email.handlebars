<form class="form-send" action="/email" method="POST">
        <h1>Compose Email</h1>

        <div>
          <label for="recipient" class="sr-only">Recipient:</label>
          <input type="email" id="recipient" name="receiver" class="form-control" placeholder="Recipient's Email" required>

          <label for="subject" class="sr-only">Subject:</label> 
          <input type="text" id="subject" name="subject" class="form-control" placeholder="Subject" required>

          <label for="body" class="sr-only">Body:</label>
          <textarea id="body" name="body" rows="5" class="form-control" placeholder="Message Body" required></textarea>
        
          <br/>
        </div>
      <button class="btn btn-lg btn-default btn-block" type="submit">Send Mail</button>
</form>