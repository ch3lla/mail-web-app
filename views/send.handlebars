<form class="form-send" action="/send" method="POST">
        <h1>Compose Email</h1>

        <label for="recipient">Recipient:</label>
        <input type="email" id="recipient" name="recipient" placeholder="Recipient's Email" required>

        <label for="subject">Subject:</label>
        <input type="text" id="subject" name="subject" placeholder="Subject" required>

        <label for="body">Body:</label>
        <textarea id="body" name="body" rows="5" placeholder="Message Body" required></textarea>
        
        <br/>

      <button type="submit" class="btn">Send Email</button>
</form>